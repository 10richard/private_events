<h1>Attended events</h1>

<% upcoming_events = @attended_events.where("event_date >= ?", Time.now)%>
<% old_events = @attended_events.where("event_date <= ?", Time.now)%>

<h2>Upcoming Events</h2>
    <p><%= 'No upcoming events' if  upcoming_events.empty? %></p>
    <% upcoming_events.each do |e| %>
        <p><%= e.name %></p>
        <p><%= e.location %></p>
        <p><%= e.event_date %></p>
    <% end %>

<h2>Past Events</h2>
    <% old_events.each do |e| %>
        <p><%= e.name %></p>
        <p><%= e.location %></p>
        <p><%= e.event_date %></p>
    <% end %>