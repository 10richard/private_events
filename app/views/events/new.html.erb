<h1>Create Event</h1>
<%= form_with model: @event do |f| %>
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>

    <%= f.label :location, 'Location' %>
    <%= f.text_field :location %>

    <%= f.label :event_date, 'Date'%>
    <%= f.date_field :event_date %>

    <%= f.submit %>
<% end %>